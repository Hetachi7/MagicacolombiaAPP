<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".SubirHistoria">


    <ImageView
        android:layout_width="408dp"
        android:layout_height="416dp"
        android:layout_marginStart="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/subirhistoria"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="-13dp" />

    <EditText
        android:id="@+id/titulo"
        android:layout_width="354dp"
        android:layout_height="45dp"
        android:hint="Titulo"
        android:textColorHint="#8B0000"
        android:textSize="20dp"
        android:textAlignment="center"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="246dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="354dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:hint="Escribe tu hsitoria"
        android:textColorHint="#8B0000"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/titulo"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="31dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="354dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:text="Escoge el departamento"
        android:textAlignment="center"
        android:textColor="#8B0000"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        tools:layout_editor_absoluteX="31dp"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/Lista"
        android:layout_width="354dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:textColor="#8B0000"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="31dp" />

    <Button
        android:id="@+id/subirH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:backgroundTint="#8B0000"
        android:text="Subir"
        app:layout_constraintTop_toBottomOf="@+id/Lista"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="163dp" />
</androidx.constraintlayout.widget.ConstraintLayout>